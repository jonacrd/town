---
import Layout from '@/layouts/Layout.astro';
---

<Layout title="Town - Panel de Vendedor">
  <div class="min-h-screen bg-bg">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Header simplificado -->
      <div class="text-center mb-8">
        <div class="w-16 h-16 bg-primary rounded-soft flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-primary-fg" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fillRule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clipRule="evenodd" />
          </svg>
        </div>
        <h1 class="text-3xl font-bold text-ink mb-2">Publicar Producto</h1>
        <p class="text-muted">Comparte lo que tienes para vender con tu comunidad</p>
      </div>

      <!-- Formulario principal -->
      <div class="bg-surface rounded-soft shadow-soft border border-gray-100 p-8">
        <form id="product-form" class="space-y-6">
          <!-- T√≠tulo -->
          <div>
            <label for="title" class="block text-sm font-semibold text-ink mb-3">
              ¬øQu√© est√°s vendiendo?
            </label>
            <input
              type="text"
              id="title"
              required
              class="w-full px-4 py-4 border border-gray-300 rounded-soft focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200 text-lg"
              placeholder="Ej: Empanadas de pino caseras"
              maxlength="100"
              aria-describedby="title-help"
            />
            <p id="title-help" class="mt-2 text-sm text-muted">S√© espec√≠fico para atraer m√°s compradores</p>
          </div>

          <!-- Precio -->
          <div>
            <label for="price" class="block text-sm font-semibold text-ink mb-3">
              ¬øCu√°l es el precio?
            </label>
            <div class="relative">
              <span class="absolute left-4 top-4 text-muted font-medium">$</span>
              <input
                type="number"
                id="price"
                required
                min="1"
                step="100"
                class="w-full pl-10 pr-4 py-4 border border-gray-300 rounded-soft focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200 text-lg"
                placeholder="0"
                aria-describedby="price-help"
              />
              <span class="absolute right-4 top-4 text-muted text-sm">CLP</span>
            </div>
            <p id="price-help" class="mt-2 text-sm text-muted">Precio por unidad en pesos chilenos</p>
          </div>

          <!-- Stock -->
          <div>
            <label for="stock" class="block text-sm font-semibold text-ink mb-3">
              ¬øCu√°ntos tienes disponibles?
            </label>
            <input
              type="number"
              id="stock"
              required
              min="0"
              class="w-full px-4 py-4 border border-gray-300 rounded-soft focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200 text-lg"
              value="1"
              aria-describedby="stock-help"
            />
            <p id="stock-help" class="mt-2 text-sm text-muted">Cantidad disponible para vender</p>
          </div>

          <!-- Imagen (opcional) -->
          <div>
            <label for="imageUrl" class="block text-sm font-semibold text-ink mb-3">
              Imagen (opcional)
            </label>
            <input
              type="url"
              id="imageUrl"
              class="w-full px-4 py-4 border border-gray-300 rounded-soft focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200"
              placeholder="https://ejemplo.com/imagen.jpg"
              aria-describedby="image-help"
            />
            <p id="image-help" class="mt-2 text-sm text-muted">URL de una imagen que muestre tu producto</p>
            
            <!-- Vista previa de imagen -->
            <div id="image-preview" class="mt-4 hidden">
              <div class="relative w-32 h-32 mx-auto">
                <img
                  id="preview-img"
                  class="w-full h-full object-cover rounded-soft border border-gray-200"
                  alt="Vista previa"
                />
                <button
                  type="button"
                  id="remove-image"
                  class="absolute -top-2 -right-2 w-6 h-6 bg-red-500 text-white rounded-full flex items-center justify-center text-xs hover:bg-red-600 transition-colors"
                  aria-label="Eliminar imagen"
                >
                  √ó
                </button>
              </div>
            </div>
          </div>

          <!-- Categor√≠a -->
          <div>
            <label for="category" class="block text-sm font-semibold text-ink mb-3">
              Categor√≠a
            </label>
            <select
              id="category"
              class="w-full px-4 py-4 border border-gray-300 rounded-soft focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200 text-lg"
              aria-describedby="category-help"
            >
              <option value="comida">üç¥ Comida</option>
              <option value="tecnologia">üì± Tecnolog√≠a</option>
              <option value="ropa">üëï Ropa</option>
              <option value="hogar">üè† Hogar</option>
              <option value="deportes">‚öΩ Deportes</option>
              <option value="servicios">üîß Servicios</option>
              <option value="otros">üì¶ Otros</option>
            </select>
            <p id="category-help" class="mt-2 text-sm text-muted">Ayuda a que las personas encuentren tu producto</p>
          </div>

          <!-- Botones de acci√≥n -->
          <div class="flex flex-col sm:flex-row gap-4 pt-6">
            <button
              type="button"
              id="clear-form"
              class="sm:flex-1 px-6 py-3 border border-gray-300 text-muted hover:text-ink hover:bg-gray-50 rounded-soft font-medium transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2"
            >
              Limpiar
            </button>
            <button
              type="submit"
              id="submit-btn"
              class="sm:flex-1 bg-primary hover:bg-blue-700 text-primary-fg px-6 py-3 rounded-soft font-semibold text-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed"
            >
              Publicar Producto
            </button>
          </div>
        </form>
      </div>

      <!-- Estad√≠sticas r√°pidas (opcional) -->
      <div class="mt-8 grid grid-cols-3 gap-4 text-center">
        <div class="bg-surface rounded-soft p-4 border border-gray-100">
          <div class="text-2xl font-bold text-primary" id="total-products">0</div>
          <div class="text-sm text-muted">Productos</div>
        </div>
        <div class="bg-surface rounded-soft p-4 border border-gray-100">
          <div class="text-2xl font-bold text-accent" id="available-products">0</div>
          <div class="text-sm text-muted">Disponibles</div>
        </div>
        <div class="bg-surface rounded-soft p-4 border border-gray-100">
          <div class="text-2xl font-bold text-warm" id="sold-out-products">0</div>
          <div class="text-sm text-muted">Agotados</div>
        </div>
      </div>
    </div>
  </div>

  <script>
    import { api, formatPrice, createWhatsAppLink } from '../utils/fetcher.ts';

    // Estado
    let userProducts = [];
    let isSubmitting = false;

    // Elementos
    const elements = {
      form: document.getElementById('product-form'),
      title: document.getElementById('title'),
      price: document.getElementById('price'),
      stock: document.getElementById('stock'),
      category: document.getElementById('category'),
      imageUrl: document.getElementById('imageUrl'),
      imagePreview: document.getElementById('image-preview'),
      previewImg: document.getElementById('preview-img'),
      removeImage: document.getElementById('remove-image'),
      submitBtn: document.getElementById('submit-btn'),
      clearBtn: document.getElementById('clear-form'),
      totalProducts: document.getElementById('total-products'),
      availableProducts: document.getElementById('available-products'),
      soldOutProducts: document.getElementById('sold-out-products')
    };

    // Funci√≥n para mostrar toast mejorado
    function showToast(message, type = 'info') {
      const toast = document.createElement('div');
      toast.className = `fixed top-4 right-4 z-50 ${type === 'success' ? 'bg-accent' : type === 'error' ? 'bg-red-500' : 'bg-primary'} text-white px-6 py-4 rounded-soft shadow-lg transform transition-all duration-300 max-w-sm`;
      toast.innerHTML = `
        <div class="flex items-start gap-3">
          <div class="flex-shrink-0">
            ${type === 'success' ? 
              '<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>' :
              type === 'error' ?
              '<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>' :
              '<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>'
            }
          </div>
          <div class="flex-1 min-w-0">
            <p class="font-medium">${message}</p>
          </div>
          <button onclick="this.parentElement.parentElement.remove()" class="flex-shrink-0 ml-2 text-white hover:text-gray-200">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </button>
        </div>
      `;
      
      document.body.appendChild(toast);
      
      // Animaci√≥n de entrada
      setTimeout(() => {
        toast.style.transform = 'translateY(0)';
      }, 10);
      
      // Remover despu√©s de 5 segundos
      setTimeout(() => {
        toast.style.transform = 'translateY(-100%) scale(0.95)';
        toast.style.opacity = '0';
        setTimeout(() => toast.remove(), 300);
      }, 5000);
    }

    // Funci√≥n para formatear precio en CLP
    function formatPriceCLP(cents) {
      return (cents / 100).toLocaleString('es-CL', {
        style: 'currency',
        currency: 'CLP',
        minimumFractionDigits: 0
      });
    }

    // Funci√≥n para cargar productos del vendedor
    async function loadUserProducts() {
      try {
        const response = await api.products.list({ active: true, limit: 100 });
        if (response.success && response.data) {
          userProducts = response.data;
          updateStats();
        }
      } catch (error) {
        console.error('Error loading user products:', error);
      }
    }

    // Funci√≥n para actualizar estad√≠sticas
    function updateStats() {
      const total = userProducts.length;
      const available = userProducts.filter(p => p.stock > 0).length;
      const soldOut = userProducts.filter(p => p.stock === 0).length;

      elements.totalProducts.textContent = total;
      elements.availableProducts.textContent = available;
      elements.soldOutProducts.textContent = soldOut;
    }

    // Vista previa de imagen
    elements.imageUrl.addEventListener('input', () => {
      const url = elements.imageUrl.value.trim();
      if (url) {
        elements.previewImg.src = url;
        elements.imagePreview.classList.remove('hidden');
      } else {
        elements.imagePreview.classList.add('hidden');
      }
    });

    // Remover imagen
    elements.removeImage.addEventListener('click', () => {
      elements.imageUrl.value = '';
      elements.imagePreview.classList.add('hidden');
    });

    // Limpiar formulario
    elements.clearBtn.addEventListener('click', () => {
      elements.form.reset();
      elements.imagePreview.classList.add('hidden');
      elements.stock.value = '1'; // Resetear stock a 1
    });

    // Formulario principal
    elements.form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      if (isSubmitting) return;

      // Validaci√≥n b√°sica
      const title = elements.title.value.trim();
      const price = parseFloat(elements.price.value);
      const stock = parseInt(elements.stock.value);

      if (!title || title.length < 3) {
        showToast('El t√≠tulo debe tener al menos 3 caracteres', 'error');
        elements.title.focus();
        return;
      }
      
      if (!price || price <= 0) {
        showToast('El precio debe ser mayor a 0', 'error');
        elements.price.focus();
        return;
      }

      if (stock < 0) {
        showToast('El stock no puede ser negativo', 'error');
        elements.stock.focus();
        return;
      }

      // Datos del producto
      const formData = {
        title: title,
        priceCents: Math.round(price * 100),
        stock: stock,
        category: elements.category.value,
        imageUrl: elements.imageUrl.value.trim() || undefined,
        description: `${title} - Producto de calidad disponible en nuestra tienda.`
      };

      // Mostrar estado de carga
      isSubmitting = true;
      elements.submitBtn.disabled = true;
      elements.submitBtn.innerHTML = `
        <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        Publicando...
      `;

      try {
        const response = await api.products.create(formData);
        
        if (response.success && response.data) {
          // Limpiar formulario
          elements.form.reset();
          elements.imagePreview.classList.add('hidden');
          elements.stock.value = '1';
          
          // Recargar estad√≠sticas
          await loadUserProducts();
          
          // Toast de √©xito con opci√≥n de compartir
          showToastWithShare(response.data);
          
        } else {
          throw new Error(response.error || 'Error al crear producto');
        }
      } catch (error) {
        console.error('Error creating product:', error);
        let errorMessage = 'Error al publicar producto';
        
        if (error.status === 400) {
          errorMessage = 'Datos inv√°lidos. Revisa los campos.';
        } else if (error.status === 0) {
          errorMessage = 'Error de conexi√≥n. Verifica tu internet.';
        }
        
        showToast(errorMessage, 'error');
      } finally {
        isSubmitting = false;
        elements.submitBtn.disabled = false;
        elements.submitBtn.textContent = 'Publicar Producto';
      }
    });

    // Toast especial con opci√≥n de compartir
    function showToastWithShare(product) {
      const toast = document.createElement('div');
      toast.className = 'fixed top-4 right-4 z-50 bg-accent text-white p-6 rounded-soft shadow-lg max-w-sm';
      toast.innerHTML = `
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div class="flex-1 min-w-0">
            <h3 class="font-semibold text-lg">¬°Producto publicado!</h3>
            <p class="text-sm opacity-90 mt-1">${product.title}</p>
            <p class="text-sm opacity-90">${formatPriceCLP(product.priceCents)}</p>
            <button
              onclick="shareProduct('${product.id}', '${product.title}', ${product.priceCents}, ${product.stock})"
              class="mt-4 bg-white text-accent px-4 py-2 rounded-soft text-sm font-semibold hover:bg-gray-100 transition-colors flex items-center gap-2"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.309"/>
              </svg>
              Compartir por WhatsApp
            </button>
          </div>
          <button onclick="this.parentElement.parentElement.remove()" class="flex-shrink-0 text-white hover:text-gray-200">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </button>
        </div>
      `;
      
      document.body.appendChild(toast);
      setTimeout(() => toast.remove(), 10000);
    }

    // Funci√≥n para compartir producto
    window.shareProduct = (productId, title, priceCents, stock) => {
      const price = formatPriceCLP(priceCents);
      const whatsappText = `üéâ ¬°Nuevo producto disponible!\n\nüì± *${title}*\nüí∞ ${price}\nüì¶ Stock: ${stock} unidades\n\n¬°Preg√∫ntame por m√°s detalles!`;
      
      // Usar n√∫mero gen√©rico para compartir
      const whatsappUrl = createWhatsAppLink('+56900000000', whatsappText);
      window.open(whatsappUrl, '_blank');
    };

    // Inicializar
    loadUserProducts();

    // Animaciones de entrada
    document.addEventListener('DOMContentLoaded', () => {
      const form = document.querySelector('form');
      const header = document.querySelector('.text-center');
      
      header.style.opacity = '0';
      header.style.transform = 'translateY(-20px)';
      form.style.opacity = '0';
      form.style.transform = 'translateY(20px)';
      
      setTimeout(() => {
        header.style.transition = 'all 0.6s ease';
        header.style.opacity = '1';
        header.style.transform = 'translateY(0)';
      }, 100);
      
      setTimeout(() => {
        form.style.transition = 'all 0.6s ease';
        form.style.opacity = '1';
        form.style.transform = 'translateY(0)';
      }, 300);
    });
  </script>

  <style>
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
    .animate-spin {
      animation: spin 1s linear infinite;
    }
  </style>
</Layout>