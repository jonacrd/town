# Database
DATABASE_URL="postgresql://username:password@localhost:5432/town"

# Server
PORT=4000
NODE_ENV=development

# CORS
ALLOW_ORIGIN="http://localhost:4321"

# Logging
LOG_LEVEL="info"

# App Configuration
APP_BASE_URL="https://town.tld"

# WhatsApp Configuration
WHATSAPP_PROVIDER="twilio"  # Options: twilio, meta

# Twilio Configuration (if using Twilio)
